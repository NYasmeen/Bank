  <div>
    <div class="row">
      <div class="containers col text-center">
        <h4>Account summary
        </h4>
        <p class="display-4">
          <strong>Rs:</strong>
          <%= JSON.stringify(Info.account);  %>
            <p>
      </div>
      <div class="containers col">
        <div class="row ">
          <div class="col-md-4 ">

            <h4>Name</h4>
          </div>
          <div class="col ">


            :
            <%= JSON.stringify(Info.name);  %>

          </div>
        </div>
        <div class="row ">
          <div class="col-md-4 ">

            <h4>Email</h4>
          </div>
          <div class="col ">
            :
            <%= JSON.stringify(Info.email);  %>

